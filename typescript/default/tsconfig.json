{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2016",                                  
    "module": "esnext",
    "esModuleInterop": true,
    "preserveSymlinks": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,     
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"]
    }
  }
}